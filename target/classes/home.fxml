<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.crossposter.controllers.HomeController">

    <center>
        <VBox spacing="15" alignment="CENTER">
            <Label text="BMC Crossposter" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
