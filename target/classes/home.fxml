            <Button text="BlueSky Connect" onAction="#goToBluesky"/>
            <Button text="Mastodon Connect" onAction="#goToMastodon"/>
            <Button text="Settings" onAction="#goToSettings"/>
        </VBox>
    </center>
</BorderPane>
