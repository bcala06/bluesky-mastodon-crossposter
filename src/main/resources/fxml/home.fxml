<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.crossposter.controllers.HomeController">

    <!-- Header -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #556CFF; -fx-padding: 10;" alignment="CENTER_LEFT">
            <children>
                <ImageView fitHeight="40" preserveRatio="true"/>
                <Label text="BMC Crossposter"
                       onMouseClicked="#openHome"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-cursor: hand;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Create Post"
                       onMouseClicked="#openCreatePost"
                       style="-fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 0 15 0 0;"/>
                <Label text="Settings"
                       onMouseClicked="#openSettings"
                       style="-fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"/>
            </children>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">

            <!-- Bluesky Box -->
            <HBox spacing="20" style="-fx-background-color: #f9f9f9; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #999999; -fx-border-radius: 10; -fx-border-width: 1;"
                  alignment="CENTER_LEFT" prefWidth="400">
                <!-- Logo -->
                <ImageView fitHeight="40" preserveRatio="true">
                    <image>
                        <Image url="@../images/Bluesky_Logo.png"/>
                    </image>
                </ImageView>
                <Region HBox.hgrow="ALWAYS"/>
                <!-- Connect Button -->
                <Button text="Connect" onAction="#openBluesky"
                        style="-fx-background-color: #556CFF; -fx-text-fill: white; -fx-background-radius: 5;"/>
            </HBox>

            <!-- Mastodon Box -->
            <HBox spacing="20" style="-fx-background-color: #f9f9f9; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #999999; -fx-border-radius: 10; -fx-border-width: 1;"
                  alignment="CENTER_LEFT" prefWidth="400">
                <!-- Logo -->
                <ImageView fitHeight="40" preserveRatio="true">
                    <image>
                        <Image url="@../images/Mastodon_Logo.png"/>
                    </image>
                </ImageView>
                <Region HBox.hgrow="ALWAYS"/>
                <!-- Connect Button -->
                <Button text="Connect" onAction="#openMastodon"
                        style="-fx-background-color: #556CFF; -fx-text-fill: white; -fx-background-radius: 5;"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>
