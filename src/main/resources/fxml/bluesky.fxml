<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.crossposter.controllers.BlueskyController">

    <!-- Header -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #556CFF; -fx-padding: 10;" alignment="CENTER_LEFT">
            <children>
                <!-- Logo links back to Dashboard -->
                <ImageView fitHeight="40" preserveRatio="true" onMouseClicked="#openDashboard" style="-fx-cursor: hand;">
                    <image>
                        <Image url="@../images/BMClogo.png"/>
                    </image>
                </ImageView>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Create Post"
                       onMouseClicked="#openCreatePost"
                       style="-fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 0 15 0 0;"/>
            </children>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="25" style="-fx-padding: 50;">
            <ImageView fitHeight="80" preserveRatio="true">
                <image>
                    <Image url="@../images/Bluesky_Logo.png"/>
                </image>
            </ImageView>

            <Label text="Bluesky Authentication"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <VBox spacing="15" maxWidth="400" alignment="CENTER">
                <Button text="Start OAuth Login"
                        onAction="#handleStartOAuth"
                        style="-fx-background-color: #556CFF; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;"/>
                
                <Label text="Click above to open the browser for authentication."
                       style="-fx-alignment: center; -fx-wrap-text: true; -fx-text-fill: gray;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
