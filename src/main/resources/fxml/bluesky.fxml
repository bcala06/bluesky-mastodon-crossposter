<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.crossposter.controllers.BlueskyController"
            style="-fx-background-color: #f5f5f7;">

    <!-- Header -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-background-color: white; 
                     -fx-padding: 20 30; 
                     -fx-border-color: #e5e5e5;
                     -fx-border-width: 0 0 1 0;">
            <children>
                <ImageView fitHeight="40" preserveRatio="true" onMouseClicked="#openDashboard" style="-fx-cursor: hand;">
                    <image>
                        <Image url="@../images/BMClogo.png"/>
                    </image>
                </ImageView>
                <Label text="Crossposter"
                       style="-fx-text-fill: #1d1d1f; 
                              -fx-font-size: 20px; 
                              -fx-font-weight: 600;"/>
                <Region HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 50;">
            <VBox alignment="CENTER" spacing="25" maxWidth="450"
                  style="-fx-background-color: white; 
                         -fx-padding: 40; 
                         -fx-background-radius: 12;
                         -fx-border-color: #e5e5e5;
                         -fx-border-radius: 12;
                         -fx-border-width: 1;">
                
                <ImageView fitHeight="64" preserveRatio="true">
                    <image>
                        <Image url="@../images/Bluesky_Logo.png"/>
                    </image>
                </ImageView>

                <Label text="Bluesky Authentication"
                       style="-fx-font-size: 22px; -fx-font-weight: 600; -fx-text-fill: #1d1d1f;"/>

                <VBox spacing="15" alignment="CENTER">
                    <Button text="Start OAuth Login"
                            onAction="#handleStartOAuth"
                            style="-fx-background-color: #007aff; 
                                   -fx-text-fill: white; 
                                   -fx-background-radius: 8; 
                                   -fx-font-weight: 500;
                                   -fx-font-size: 15px;
                                   -fx-padding: 12 30;
                                   -fx-cursor: hand;">
                        <cursor><javafx.scene.Cursor fx:constant="HAND"/></cursor>
                    </Button>
                    
                    <Label text="Click above to open the browser for authentication."
                           style="-fx-text-fill: #86868b; -fx-font-size: 13px; -fx-wrap-text: true; -fx-text-alignment: center;"/>
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>