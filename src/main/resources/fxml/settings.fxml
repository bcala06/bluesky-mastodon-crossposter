<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.crossposter.controllers.SettingsController">

    <!-- Header -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #556CFF; -fx-padding: 10;"
              alignment="CENTER_LEFT">
            <children>
                <ImageView fitHeight="40" preserveRatio="true"/>
                <Label text="BMC Crossposter"
                       onMouseClicked="#openHome"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-cursor: hand;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <!-- Create Post Link ONLY -->
                <Label text="Create Post"
                       onMouseClicked="#openCreatePost"
                       style="-fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 0 15 0 0;"/>
            </children>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">
            <Label text="Settings" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <!-- Bluesky Box -->
            <HBox spacing="20" style="-fx-border-color: #444; -fx-border-radius: 8; -fx-padding: 15; -fx-background-radius: 8;"
                  alignment="CENTER_LEFT">
                <!-- Logo -->
                <ImageView fitHeight="40" preserveRatio="true">
                    <image>
                        <javafx.scene.image.Image url="@../images/Bluesky_Logo.png"/>
                    </image>
                </ImageView>
                <Region HBox.hgrow="ALWAYS"/>
                <!-- Buttons -->
                <HBox spacing="10">
                    <Button text="Reconnect" onAction="#handleReconnectBluesky"
                            style="-fx-background-color: #556CFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>
                    <Button text="Disconnect" onAction="#handleDisconnectBluesky"
                            style="-fx-background-color: #FF4D4D; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>
                </HBox>
            </HBox>

            <!-- Mastodon Box -->
            <HBox spacing="20" style="-fx-border-color: #444; -fx-border-radius: 8; -fx-padding: 15; -fx-background-radius: 8;"
                  alignment="CENTER_LEFT">
                <!-- Logo -->
                <ImageView fitHeight="40" preserveRatio="true">
                    <image>
                        <javafx.scene.image.Image url="@../images/Mastodon_Logo.png"/>
                    </image>
                </ImageView>
                <Region HBox.hgrow="ALWAYS"/>
                <!-- Buttons -->
                <HBox spacing="10">
                    <Button text="Reconnect" onAction="#handleReconnectMastodon"
                            style="-fx-background-color: #556CFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>
                    <Button text="Disconnect" onAction="#handleDisconnectMastodon"
                            style="-fx-background-color: #FF4D4D; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>
                </HBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
