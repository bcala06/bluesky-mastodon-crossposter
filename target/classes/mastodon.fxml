<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.crossposter.controllers.MastodonController"
      spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">

    <Label text="Mastodon Authentication" style="-fx-font-size: 20px;"/>
    <TextField fx:id="instance" promptText="Instance URL"/>
    <TextField fx:id="username" promptText="Username"/>
    <PasswordField fx:id="password" promptText="Password"/>
    <Button text="Connect" onAction="#authenticate"/>
    <Button text="Back to Home" onAction="#goHome"/>
</VBox>
