<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.crossposter.controllers.BlueskyController">

    <!-- Header -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #556CFF; -fx-padding: 10;" alignment="CENTER_LEFT">
            <children>
                <ImageView fitHeight="40" preserveRatio="true"/>
                <Label text="BMC Crossposter"
                       onMouseClicked="#openHome"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-cursor: hand;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Create Post"
                       onMouseClicked="#openCreatePost"
                       style="-fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 0 15 0 0;"/>
                <Label text="Settings"
                       onMouseClicked="#openSettings"
                       style="-fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"/>
            </children>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">
            <!-- Logo -->
            <ImageView fitHeight="80" preserveRatio="true">
                <image>
                    <Image url="@../images/Bluesky_Logo.png"/>
                </image>
            </ImageView>

            <Label text="Bluesky Authentication"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <VBox spacing="15" maxWidth="400" alignment="CENTER">
                <Button text="Start OAuth Login"
                        onAction="#handleStartOAuth"
                        style="-fx-background-color: #556CFF; -fx-text-fill: white; -fx-background-radius: 5;"/>
                
                <Label text="Click above to open the browser for authentication."
                       style="-fx-alignment: center; -fx-wrap-text: true;"/>

            </VBox>
        </VBox>
    </center>
</BorderPane>