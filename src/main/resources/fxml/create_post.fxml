<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.crossposter.controllers.CreatePostController">

    <!-- Header -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #556CFF; -fx-padding: 10;"
              alignment="CENTER_LEFT">
            <children>
                <ImageView fitHeight="40" preserveRatio="true"/>
                <Label text="BMC Crossposter"
                       onMouseClicked="#openHome"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-cursor: hand;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <!-- Settings Link ONLY -->
                <Label text="Settings"
                       onMouseClicked="#openSettings"
                       style="-fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"/>
            </children>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 40;">
            <Label text="Create Post" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Text"/>
            <TextArea fx:id="postContent" prefHeight="200" prefWidth="400"/>
            <CheckBox fx:id="blueskyCheck" text="Bluesky Post"/>
            <CheckBox fx:id="mastodonCheck" text="Mastodon Post"/>

            <!-- Themed Button -->
            <Button text="Submit" onAction="#handlePost" maxWidth="Infinity"
                    style="-fx-background-color: #556CFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>
        </VBox>
    </center>
</BorderPane>
