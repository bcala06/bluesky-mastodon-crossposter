<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.crossposter.controllers.DashboardController"
            style="-fx-background-color: #f5f6fa;">

    <!-- Header -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-background-color: #556CFF; -fx-padding: 10 20;">
            <children>
                <!-- BMC Logo -->
                <ImageView fitHeight="45" preserveRatio="true">
                    <image>
                        <Image url="@../images/BMClogo.png"/>
                    </image>
                </ImageView>
                <Label text="Crossposter Dashboard"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 0 0 0 5;"/>
                <Region HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="40" style="-fx-padding: 50;">
            <!-- PLATFORM CONNECTIONS -->
            <VBox spacing="20" alignment="CENTER" prefWidth="500">
                <Label text="Platform Connections"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

                <!-- Bluesky -->
                <HBox spacing="20" alignment="CENTER_LEFT"
                      style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;
                             -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-border-width: 1;">
                    <ImageView fitHeight="40" preserveRatio="true">
                        <image>
                            <Image url="@../images/Bluesky_Logo.png"/>
                        </image>
                    </ImageView>
                    <Label text="Bluesky" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="blueskyButton" text="Connect" onAction="#openBluesky"
                            style="-fx-background-color: #556CFF; -fx-text-fill: white;
                                   -fx-background-radius: 6; -fx-font-weight: bold; -fx-padding: 6 15;"/>
                </HBox>

                <!-- Mastodon -->
                <HBox spacing="20" alignment="CENTER_LEFT"
                      style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;
                             -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-border-width: 1;">
                    <ImageView fitHeight="40" preserveRatio="true">
                        <image>
                            <Image url="@../images/Mastodon_Logo.png"/>
                        </image>
                    </ImageView>
                    <Label text="Mastodon" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="mastodonButton" text="Connect" onAction="#openMastodon"
                            style="-fx-background-color: #556CFF; -fx-text-fill: white;
                                   -fx-background-radius: 6; -fx-font-weight: bold; -fx-padding: 6 15;"/>
                </HBox>
            </VBox>

            <!-- SEPARATOR -->
            <Separator prefWidth="500"/>

            <!-- POST CREATION -->
            <VBox alignment="CENTER" spacing="20" prefWidth="500">
                <Label text="Create a Post"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <TextArea fx:id="postContent" promptText="Write your post here..."
                          prefHeight="180" prefWidth="500"
                          style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 14px;"/>
                <HBox spacing="20" alignment="CENTER">
                    <CheckBox fx:id="blueskyCheck" text="Post to Bluesky"/>
                    <CheckBox fx:id="mastodonCheck" text="Post to Mastodon"/>
                </HBox>
                <Button text="Submit Post" onAction="#handlePost"
                        style="-fx-background-color: #556CFF; -fx-text-fill: white;
                               -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8;
                               -fx-padding: 10 25;"/>
            </VBox>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: transparent;">
            <Label text="Â© 2025 BMC Crossposter" style="-fx-text-fill: #777; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>

</BorderPane>
